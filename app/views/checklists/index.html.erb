<div class="page-header">
  <h1><%=t '.title', :default => Checklist.model_name.human.pluralize.titleize %></h1>
</div>

<div id="checklists">
  <%= render partial: 'checklists', locals: { checklists: @checklists } %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_checklist_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.new', :default => t("helpers.links.destroy_all")),
            destroy_all_checklists_path,
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>

<h2>CSVアップロード</h2>

<%= form_for @csv_form, url: { action: 'upload' }, html: { multipart: true, remote: true, authenticity_token: true } do |f| %>
      <%= f.file_field :file, :class => 'form-control' %>
  <%= f.submit t('button.upload_csv'), :class => 'btn btn-primary' %>
<% end %>
