<div class="page-header">
  <h1><%=t '.title', :default => Checklist.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Checklist.human_attribute_name(:id) %></th>
      <th><%= Checklist.human_attribute_name(:title) %></th>
      <th><%= Checklist.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <td><%= checklist.id %></td>
        <td><%= checklist.title %></td>
        <td><%=l checklist.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      checklist, :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_checklist_path(checklist), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      checklist_path(checklist),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_checklist_path,
            :class => 'btn btn-primary' %>
