<table class="table table-striped">
  <thead>
    <tr>
      <th>Marker</th>
      <th><%= Place.human_attribute_name(:address) %></th>
      <th><%= Place.human_attribute_name(:latitude) %></th>
      <th><%= Place.human_attribute_name(:longitude) %></th>
    </tr>
  </thead>
  <tbody>
    <% places.each_with_index do |place, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= place.address %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for map, url: { action: 'export', format: 'gpx' } do |f| %>
  <div class="control-group">
    <%= f.label :tracks, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :tracks, :class => 'form-control' %>
    </div>
  </div>
  <%= f.submit t("button.export_gpx"), :class => 'btn btn-primary' %>
<% end %>
